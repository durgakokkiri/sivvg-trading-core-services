pipeline {
    agent any

    stages {

        stage('Build') {
            steps {
                dir('sivvg-trading-core-services') {
                    bat 'mvnw.cmd clean install -DskipTests'
                }
            }
        }

        stage('Run') {
            steps {
                dir('sivvg-trading-core-services') {
                    bat '''
                    for %%i in (target\\*.jar) do (
                        java -jar %%i
                    )
                    '''
                }
            }
        }
    }
}